WITH education AS (
SELECT
    way,
    amenity AS education
  FROM planet_osm_polygon
  WHERE way && {{bbox}}
    AND amenity IN ('school', 'kindergarten', 'university', 'college')
)
SELECT
    ST_AsMVTGeom(ST_Collect(way), {{unbuffered_bbox}}, {{extent}}, {{buffer}}) AS way,
    education
  FROM education
  GROUP BY education
